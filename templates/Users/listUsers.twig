{% extends "layout.twig" %}

{% block content %}
<h3>User Directory</h3>
<hr/>
<div class="card mb-3">
    <div class="mt-6 mt-auto" id="app">
        <div class="card-header">Users</div>
        <div class="card-body">

            {% include "_list_bar.twig" %}

            <div class="table-responsive">

                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                    <tr>
                        <th>Email</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                    </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                        <tr>
                            <td>{{ user.getEmail() }}</td>
                            <td>{{ user.getFirstName() }}</td>
                            <td>{{ user.getLastName() }}</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>

                <div class="row">
                    <div class="col-md-1">
                        {% if page > 0 %}
                        <a href="{{ url }}?page={{ page - 1 }}">Previous</a>
                        {% endif %}
                    </div>
                    <div class="col-md-10">
                    </div>
                    <div class="col-md-1">
                        {% if page < maxpage %}
                        <a href="{{ url }}?page={{ page + 1 }}">Next</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block customJs %}
{% endblock %}